<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.sayatech.slambook.BrowsingMore"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Theme.SlamBook.SlamInputLayout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textHobbies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Theme.SlamBook.SlamInputEditText"
            android:hint="My Hobbies!"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Theme.SlamBook.SlamInputLayout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textCrazy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Theme.SlamBook.SlamInputEditText"
            android:hint="I go crazy about!" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Theme.SlamBook.SlamInputLayout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textFascinate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Theme.SlamBook.SlamInputEditText"
            android:hint="Fascinated By?" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Theme.SlamBook.SlamInputLayout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textAmbition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Theme.SlamBook.SlamInputEditText"
            android:hint="Ambition!" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Theme.SlamBook.SlamInputLayout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textGenie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Theme.SlamBook.SlamInputEditText"
            android:hint="If Genie would give me a wish!" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Theme.SlamBook.SlamInputLayout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textPresident"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Theme.SlamBook.SlamInputEditText"
            android:hint="First rule I'd make as president" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Theme.SlamBook.SlamInputLayout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textBadAt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5sp"
            style="@style/Theme.SlamBook.SlamInputEditText"
            android:hint="I'm bad at -_-" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Theme.SlamBook.SlamInputLayout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textLove"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Theme.SlamBook.SlamInputEditText"
            android:hint="Describe Love!" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Theme.SlamBook.SlamInputLayout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textFriendship"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Theme.SlamBook.SlamInputEditText"
            android:hint="Describe Friendship!" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Theme.SlamBook.SlamInputLayout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textAboutYou"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Theme.SlamBook.SlamInputEditText"
            android:hint="Tell us more about you!" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/save"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="20sp"
        style="@style/Widget.Material3.Button.TonalButton"
        android:text="SAVE"
        android:textSize="20sp" />

</LinearLayout>
</ScrollView>